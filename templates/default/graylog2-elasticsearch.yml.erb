discovery.zen.ping.timeout: <%= node[:graylog2_light][:server][:elasticsearch][:discovery_zen_ping_timeout] %>
discovery.zen.ping.unicast.hosts: <%= node[:graylog2_light][:server][:elasticsearch][:discovery_zen_ping_unicast_hosts] %>

<% end %>